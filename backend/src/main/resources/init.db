CREATE TABLE IF NOT EXISTS unidade_assistencial (
  id BIGSERIAL PRIMARY KEY,
  nome_fantasia VARCHAR(200) NOT NULL,
  razao_social VARCHAR(200),
  cnpj VARCHAR(20),
  email VARCHAR(150),
